<!DOCTYPE html>
<html>
<head>
	<title>Hackmai</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<!-- Google map autocomplete -->
	<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false&amp;libraries=places"></script>
	<%= csrf_meta_tags %>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<!-- <meta name="viewport" content="width=device-width, initial-scale=1">-->
 	<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
	<meta name="description" content="">
	<meta name="author" content="">

	<title>Agency - Start Bootstrap Theme</title>

	<!-- Custom Fonts -->
	<link href="http://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
	<link href='http://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>

	<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
			<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
			<script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
	<![endif]-->
</head>

<body id="page-top" class="index">

		<!-- Navigation -->
		<nav class="navbar navbar-default navbar-fixed-top">
				<div class="container">
						<!-- Brand and toggle get grouped for better mobile display -->
						<div class="navbar-header page-scroll">
								<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
										<span class="sr-only">Toggle navigation</span>
										<span class="icon-bar"></span>
										<span class="icon-bar"></span>
										<span class="icon-bar"></span>
								</button>
								<%=link_to "HACKMAI", root_path, class: "navbar-brand page-scroll"%>
						</div>

						<!-- Collect the nav links, forms, and other content for toggling -->
						<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
								<ul class="nav navbar-nav navbar-right">
										<li class="hidden">
												<a href="#page-top"></a>
										</li>
										<li>
												<%= link_to "About", root_path+"#about", class: "page-scroll"%>
										</li>
										<li>
												<a href="" id="order-link">Order</a>
										</li>
										<li>
												<%= link_to "Contact", root_path+"#contact", class: "page-scroll"%>
												<!-- <a class="page-scroll" href="#team">Contact</a> -->
										</li>
										<li>
								 		<li class="dropdown">
								 				<% if user_signed_in? %>
								        <a href="#" data-toggle="dropdown" class="dropdown-toggle">
								        <%= current_user.username.present? ? current_user.username : current_user.email%>
												<b class="caret"></b></a>
								        <ul class="dropdown-menu">
								            <li><%= link_to 'Edit profile', edit_user_registration_path, id: "drop-down-list"%></li>
								            <li><%= link_to "Logout", destroy_user_session_path, method: :delete, id: "drop-down-list" %></li>
								        <% else %>
								        <a href="#" data-toggle="dropdown" class="dropdown-toggle">Sign-up/Login <b class="caret"></b></a>
								        	<ul class="dropdown-menu">
									        	<li><%= link_to "Login", new_user_session_path, id: "drop-down-list"%></li>
										        <li><%= link_to "Sign up", new_user_registration_path, id: "drop-down-list"%></li>
												<% end %>
								        </ul>
								    </li>
								</ul>
						</div>
						<!-- /.navbar-collapse -->
				</div>
				<!-- /.container-fluid -->
		</nav>

 <% flash.each do |name, msg| %>
	 <% if msg.is_a?(String) %>
		 <%= content_tag :div, msg, :class => "flash_#{name}" %>
	 <% end %>
 <% end %>

<%= yield %>

</body>
<%= render "shared/footer"%>
</html>
