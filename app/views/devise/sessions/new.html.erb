<div class="container">
    <div class="row">
        <div class="vcenter col-sm-6 col-md-4 col-md-offset-4">
          <h2>Log-in</h2>
          <%= link_to image_tag('http://i.stack.imgur.com/Vk9SO.png'), user_omniauth_authorize_path(:facebook)%>
          <hr>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div>
            <%= f.label :email do %>
              <i class="fa fa-envelope-o fa-fw"></i>
              <%= User.human_attribute_name :email %>
            <%- end -%><br />
              <%= f.email_field :email, autofocus: true %></div>

            <div>
            <%= f.label :password do %>
              <i class="fa fa-key fa-fw"></i>
              <%= User.human_attribute_name :password %>
            <%- end -%><br />
              <%= f.password_field :password, autocomplete: "off" %></div>

            <% if devise_mapping.rememberable? -%>
              <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
            <% end -%><br />

            <div><%= f.submit "Log in", class: "btn btn-default" %></div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
    </div>
</div>
