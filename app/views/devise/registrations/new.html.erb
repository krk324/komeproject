<div class="wrapper">
  <div class="form-signin">
    <h2 class="form-signin-heading">Sign up</h2>

<!--     <%= link_to image_tag('http://i.stack.imgur.com/Vk9SO.png'), user_omniauth_authorize_path(:facebook)%> -->

    <%= link_to "Facebook Login", user_omniauth_authorize_path(:facebook)%>
    <hr>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div>
      <%= f.label :email do %>
        <i class="fa fa-envelope-o fa-fw"></i>
        <%= User.human_attribute_name :email %>
      <%- end -%><br />
        <%= f.email_field :email, autofocus: true %></div>

      <div>
      <%= f.label :password do %>
        <i class="fa fa-key fa-fw"></i>
        <%= User.human_attribute_name :password %>
      <%- end -%><br />
        <%= f.password_field :password, autocomplete: "off" %></div><br />

      <div><%= f.submit "Sign up", class: "btn btn-default" %></div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
