<!-- CheckOut Modal -->
<div class="modal fade" id="checkoutModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header" style="text-align: center">
        <button type="button" class="btn btn-danger pull-right" data-dismiss="modal">x</button>
        <h3 class="modal-title" id="myModalLabel">&emsp;&emsp;Checkout</h3>
      </div>
      <div class="modal-body">

      </div>
      <div class="modal-footer">
        <%= form_tag charges_path do %>
          <article>
            <label class="amount">
              <span></span>
            </label>
          </article>

          <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                  data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                  data-description="Hackmai Order"
                  data-email="<%=current_user.email if current_user%>"></script>
        <% end %>
      </div>
    </div>
  </div>
</div>
