<!-- Menu -->
<section id="team" class="bg-light-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Our Original Premium Bowls</h2>
                <h3 class="section-subheading text-muted">Changes every week - Price: 11.99</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="team-member">
                    <%= image_tag('https://s3-us-west-2.amazonaws.com/hackmai/brittlesalmon-small.jpg', class: "img-responsive")%>
                    <h4>Sushi Bowl</h4>
                    <p class="text-muted">Brittle Salmon Bowl</p>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="team-member">
                    <%= image_tag('https://s3-us-west-2.amazonaws.com/hackmai/yakinikubeef-small.jpg', class: "img-responsive")%>
                    <h4 class="beef">Beef Bowl</h4>
                    <p class="text-muted">Yakiniku Beef Bowl</p>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="team-member">
                    <%= image_tag('https://s3-us-west-2.amazonaws.com/hackmai/vegetablebowl-small.jpg', class: "img-responsive")%>
                    <h4 class="vege">Vegetable Bowl</h4>
                    <p class="text-muted"> Japanese Style Green & Red Bowl</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">
                <p class="large text-muted">Weekly premium rice dishes handcrafted by an experienced Japanese chef. Remember 11.99 includes tax, delivery fee and tip.</p>
            </div>
        </div>
    </div>
</section>

<!-- Order direction -->
<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">How do I order?</h2>
                <h3 class="section-subheading text-muted">Order Premium Japanese Rice dishes as easy as 4 steps!</h3>
            </div>
        </div>
        <div class="row text-center">
            <div class="col-md-3">
                <span class="fa-stack fa-4x">
                    <i class="fa fa-circle fa-stack-2x text-primary"></i>
                    <i class="fa fa-dot-circle-o fa-stack-1x fa-inverse"></i>
                </span>
                <h4 class="service-heading">1. Choose your Bowl</h4>
                <p class="text-muted">Choose from our selection of exclusive Japanese rice dishes.</p>
            </div>
            <div class="col-md-3">
                <span class="fa-stack fa-4x">
                    <i class="fa fa-circle fa-stack-2x text-primary"></i>
                    <i class="fa fa-credit-card fa-stack-1x fa-inverse"></i>
                </span>
                <h4 class="service-heading">2. Make a payment</h4>
                <p class="text-muted">After selecting your favorite rice dishes, make a payment with your credit card.</p>
            </div>
            <div class="col-md-3">
                <span class="fa-stack fa-4x">
                    <i class="fa fa-circle fa-stack-2x text-primary"></i>
                    <i class="fa fa-car fa-stack-1x fa-inverse"></i>
                </span>
                <h4 class="service-heading">3. Receive a call and meet a driver near the curb. (Stay Inside, Stay Warm!)</h4>
                <p class="text-muted">Recieve a three-minute warning call and be ready to receive your meals from HACKMAI driver near the curb.</p>
            </div>
            <div class="col-md-3">
                <span class="fa-stack fa-4x">
                    <i class="fa fa-circle fa-stack-2x text-primary"></i>
                    <i class="fa fa-cutlery fa-stack-1x fa-inverse"></i>
                </span>
                <h4 class="service-heading">4. Enjoy your meals!</h4>
                <p class="text-muted">Enjoy our exclusive premium rice dishes! Share about us with your friends :) </p>
            </div>
        </div>
        <div class="row text-center">
            <button class="btn btn-xl2" id="order-link">Start Ordering</button>
        </div>
    </div>
</section>

