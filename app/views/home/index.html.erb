    <div class="container">
        <div class="intro-text">
            <div class="intro-heading"><%= image_tag('https://s3-us-west-2.amazonaws.com/hackmai/hackmai-logo.png', class: "img-responsive col-centered", size:"370x118") %></div>
            <button class="btn btn-xl" id="order-link">Start Ordering</button>
