 <div class="row text-center">
  <div class="col-md-6">
    <h4>Your Information</h4>
    <hr>
    <h5>Address<h5>
    <input class="form-control" type="text"/>
    <h5>Phone Number<h5>
    <input class="form-control" type="tel" pattern="^\d{3}-\d{3}-\d{4}$" >
    <h5>Credit Card Info<h5>
  </div>
   <div class="col-md-6">
    <h4>Order Information</h4>
    <hr>
    {{#each cart}}
    <h4>{{name}}:<small>${{price}} x {{quantity}} = {{total}}</small></h4>
    {{/each}}
    <hr>
    <h4>Total: {{cart.total}}</h4>
    <h5>(Tax and delivery fees included)<h5>
  </div>
</div>
